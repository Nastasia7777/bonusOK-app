<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:orientation="vertical"
    tools:context=".EditingProfileActivity">

    <EditText
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:inputType="textPersonName"
         android:textSize="20sp"
         android:id="@+id/name"
         android:hint="@string/name_user_editView"
         android:layout_marginBottom="30dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textSize="20sp"
        android:id="@+id/surname"
        android:hint="@string/surname_user_editView"
        android:layout_marginBottom="30dp"/>

    <EditText
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:inputType="datetime"
         android:textSize="20sp"
         android:id="@+id/date"
         android:clickable="false"
         android:cursorVisible="false"
         android:focusable="false"
         android:focusableInTouchMode="false"
         android:onClick="setDate"
         android:hint="@string/birthday_editView"
         android:layout_marginBottom="30dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textSize="20sp"
        android:id="@+id/email"
        android:hint="@string/email_user_editView"
        android:layout_marginBottom="30dp"/>

    <Button
        android:id="@+id/btn_saving_date"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:onClick="saveClientDataOnClick"
        android:text="@string/save_text"
        android:textSize="20sp" />

     <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="20sp"
        android:id="@+id/btn_exit"
        android:backgroundTint="@color/cardview_dark_background"
        android:text="@string/menu_exit_text"
        android:layout_marginTop="30dp"/>

</LinearLayout>